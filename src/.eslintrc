{
  // http://eslint.org/docs/rules/

  "globals": {
    "Phaser": true
  },

  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },

  "rules": {
    "block-spacing": 1,
    "camelcase": 1,
    "comma-dangle": [1, "only-multiline"],
    "comma-spacing": [1, { "before": false, "after": true }],
    "comma-style": [1, "last"],
    "computed-property-spacing": 1,
    "curly": 1,
    "eqeqeq": 1,
    "key-spacing": 1,
    "keyword-spacing": 1,
    "no-empty": [1, { "allowEmptyCatch": true }],
    "no-dupe-keys": 1,
    "no-eq-null": 1,
    "no-extra-semi": 1,
    "no-irregular-whitespace": [1, { "skipComments": true }],
    "no-multi-spaces": 1,
    "no-redeclare": 1,
    "no-spaced-func": 1,
    "no-undef": 1,
    "no-unexpected-multiline": 1,
    "no-unneeded-ternary": 1,
    "no-unreachable": 1,
    "no-useless-concat": 1,
    "no-unused-vars": 1,
    "no-whitespace-before-property": 1,
    "quotes": [1, "single", {
      "allowTemplateLiterals": true,
      "avoidEscape": true
    }],
    "radix": 1,
    "strict": 1,
    "semi": 1,
    "space-before-blocks": 1,
    "space-in-parens": 1,
    "space-unary-ops": 1,
    "use-isnan": 1,
    "yoda": 1
  }
}
