{
  "name": "verminwipeout",
  "version": "0.0.1",
  "description": "Vermin Wipeout - An Intergalactic Space Shooter",
  "scripts": {
    "start": "npm-run-all -p build:* -s lint -p watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf public && mkdir public && mkdir public/js && mkdir public/js/vendor",
    "prebuild": "npm run clean",
    "build:html": "cp client/index.html public/index.html",
    "build:vendor": "cp node_modules/phaser/build/phaser.js public/js/vendor/phaser.js",
    "build:js": "browserifyinc client/game.js > public/js/game.js -v -d",
    "prebuild:images": "rm -rf public/images && mkdir public/images",
    "build:images": "cp -r ../game/images/ public/images",
    "lint": "esw client/*.js",
    "watch:js": "onchange 'client/**/*.js' -v -- npm run build:js",
    "watch:server": "nodemon --watch server server/index.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "browserify": "14.1.0",
    "browserify-incremental": "3.1.1",
    "domready": "1.0.8",
    "eslint": "3.19.0",
    "eslint-watch": "3.0.1",
    "express": "4.15.2",
    "http-server": "0.9.0",
    "nodemon": "1.11.0",
    "npm-run-all": "4.0.2",
    "onchange": "3.2.1",
    "phaser": "2.6.2"
  }
}
